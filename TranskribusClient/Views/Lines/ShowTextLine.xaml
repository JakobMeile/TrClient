<Window x:Class="TranskribusClient.Views.ShowTextLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranskribusClient.Views"
        mc:Ignorable="d"
        Title="DialogShowTextLine" 
        Height="450" 
        Width="800"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Text"/>
                <TextBox x:Name="txtTextLineContent" Text="{Binding TextEquiv}" Width="700"/>
            </StackPanel>
            <Canvas Width="600" Height="200">
                <Image x:Name="imgTextLine" HorizontalAlignment="Left"/>
            </Canvas>
        </StackPanel>

    </Grid>
</Window>
